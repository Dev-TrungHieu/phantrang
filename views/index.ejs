<!DOCTYPE html>
<html lang="en">

<% include common %>

<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 ">
                <h2 style="margin-bottom: 20px">Page <%= page %></h2>
            </div>
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                <!-- <form action="/" method="post"> -->
                <nav aria-label="...">
                    <ul class="pagination pull-right" style="margin-top: 10px;">
                        <li class="page-item disabled">
                            <% if(page == 1){ %>
                                <span class="page-link">Previous</span>
                            <% } %>
                        </li>
                        <li class="page-item">
                            <% if(page !==1){ %>
                                <a class="page-link" href="?page=<%= page - 1%>">Previous</a>
                            <% } %>
                        </li>
                        <% for( i = 1; i < giatri+ 1 ; i++){ %>
                        <% if(i == page && page == 1) {%>
                            <li class="page-item active"><a class="page-link" href="?page=<%= i %>"> <%= i %> </a></li>
                            <li class="page-item"><a class="page-link" href="?page=<%= i + 1%>"> <%= i+1 %> </a></li>
                            <li class="page-item"><a class="page-link" href="?page=<%= i + 2%>"> <%= i+2 %> </a></li>
                        <% } %>
                        <% if(i == page && page !== 1 && page !== giatri) {%>
                            <li class="page-item"><a class="page-link" href="?page=<%= i - 1%>"> <%= i - 1 %> </a></li>
                            <li class="page-item active"><a class="page-link" href="?page=<%= i %>"> <%= i %> </a></li>
                            <li class="page-item"><a class="page-link" href="?page=<%= i + 1%>"> <%= i + 1 %> </a></li>
                        <% } %>
                        <% if(i == page && page == giatri ) {%>
                            <li class="page-item"><a class="page-link" href="?page=<%= i - 2%>"> <%= i - 2 %> </a></li>
                            <li class="page-item"><a class="page-link" href="?page=<%= i - 1%>"> <%= i - 1 %> </a></li>
                            <li class="page-item active"><a class="page-link" href="?page=<%= i %>"> <%= i %> </a></li>
                        <% } %>
                        
                        <% } %>
                        <li class="page-item">
                            <% if(page < giatri){ %>
                            <a class="page-link" href="?page=<%= page + 1%>">Next</a>
                            <% } %>
                            
                        </li>
                        <li class="page-item disabled">
                                <% if(page == giatri) { %>
                                    <a class="page-link" href="?page=<%= page + 1%>">Next</a>
                                <% } %>
                        </li>
                    </ul>
                </nav>
                <!-- </form> -->
            </div>
        </div>
        <div class="row">
            <% products.forEach(function(i) { %>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" style="margin-bottom: 15px;">
                <div class="card" style="width: 17rem;">
                    <img style="width: 100%; height: 150px;" src="<%= i.img %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= i.title %></h5>
                        <p class="card-text"> <%= i.content %></p>
                        <a href="/cart/add/<%= i.id %>" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

    </div>
</body>

</html>